<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/lightGrey"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ImageView
        android:id="@+id/ivLogoAboutApp"
        android:layout_width="@dimen/_64sdp"
        android:layout_height="@dimen/_64sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_24sdp"
        android:src="@drawable/ic_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvVersionAboutApp"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:fontFamily="@font/open_sans_semibold"
        android:textColor="@color/darkBlue"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintBottom_toTopOf="@+id/tvAddressAboutApp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivLogoAboutApp"
        app:layout_constraintTop_toTopOf="@+id/ivLogoAboutApp"
        tools:text="Версия 1.1.24" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvAddressAboutApp"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:fontFamily="@font/open_sans"
        android:textColor="@color/darkBlue"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintBottom_toTopOf="@+id/tvSiteAboutApp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivLogoAboutApp"
        app:layout_constraintTop_toBottomOf="@+id/tvVersionAboutApp"
        tools:text="1208742, г. Астана, ул. Бейбитшилик, 33, подьезд 6, этаж 5, помещение 730" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvSiteAboutApp"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:autoLink="web"
        android:fontFamily="@font/open_sans"
        android:textColor="@color/darkBlue"
        android:textColorLink="@color/primaryBlue"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintBottom_toBottomOf="@+id/ivLogoAboutApp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivLogoAboutApp"
        app:layout_constraintTop_toBottomOf="@+id/tvAddressAboutApp"
        tools:text="kzpharamcy.com" />

    <com.pulse.manager.widget.ProfileItemView
        android:id="@+id/itemAgreementAboutApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        app:arrowVisibilityProfile="true"
        app:iconProfile="@drawable/ic_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSiteAboutApp"
        app:titleProfile="@string/userAgreement" />

    <com.pulse.manager.widget.ProfileItemView
        android:id="@+id/itemPrivacyAboutApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        app:arrowVisibilityProfile="true"
        app:iconProfile="@drawable/ic_locked"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemAgreementAboutApp"
        app:titleProfile="@string/privacyPolicy" />

    <com.pulse.manager.widget.ProfileItemView
        android:id="@+id/itemTermsAboutApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        app:arrowVisibilityProfile="true"
        app:iconProfile="@drawable/ic_shield"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemPrivacyAboutApp"
        app:titleProfile="@string/termsAndConditions" />

    <com.pulse.manager.widget.ProfileItemView
        android:id="@+id/itemCashbackAboutApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        app:arrowVisibilityProfile="true"
        app:iconProfile="@drawable/ic_dollar_sign"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemTermsAboutApp"
        app:titleProfile="@string/cashback" />

</androidx.constraintlayout.widget.ConstraintLayout>