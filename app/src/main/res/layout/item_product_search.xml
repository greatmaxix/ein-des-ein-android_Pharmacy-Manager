<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_136sdp"
    android:layout_marginStart="@dimen/_16sdp"
    android:layout_marginTop="@dimen/_8sdp"
    android:layout_marginEnd="@dimen/_16sdp"
    app:cardCornerRadius="@dimen/_8sdp"
    app:rippleColor="@color/colorRippleBlue">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_8sdp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivProduct"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            style="@style/Text.BlockHeaderBold"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:ellipsize="end"
            android:gravity="center|start"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="@+id/ivWish"
            app:layout_constraintEnd_toStartOf="@+id/ivWish"
            app:layout_constraintStart_toEndOf="@+id/ivProduct"
            app:layout_constraintTop_toTopOf="@+id/ivWish"
            tools:text="Название товара..." />

        <TextView
            android:id="@+id/tvSubTitle"
            style="@style/Text.CheckoutFilled"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            app:layout_constraintEnd_toEndOf="@+id/tvTitle"
            app:layout_constraintStart_toStartOf="@+id/tvTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            tools:text="Таблетки шипучие, 20 мг" />

        <TextView
            android:id="@+id/tvManufacture"
            style="@style/Text.CheckoutFilled"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintBottom_toTopOf="@+id/tvProductPrice"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvSubTitle"
            app:layout_constraintVertical_bias="0.0"
            tools:text="Производитель, Россия" />

        <TextView
            android:id="@+id/tvPriceUnavailable"
            style="@style/Text.CheckoutEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_4sdp"
            android:text="@string/temporaryUnavailable"
            android:textColor="@color/greyText"
            android:textSize="@dimen/_11ssp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/ivProduct"
            app:layout_constraintStart_toStartOf="@+id/tvTitle" />

        <TextView
            android:id="@+id/tvPricePrefix"
            style="@style/Text.CheckoutEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_4sdp"
            android:text="@string/from"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintBottom_toBottomOf="@+id/ivProduct"
            app:layout_constraintStart_toStartOf="@+id/tvTitle" />

        <TextView
            android:id="@+id/tvProductPrice"
            style="@style/Text.CheckoutEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvPricePrefix"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvPricePrefix"
            tools:text="500000 Р" />

        <ImageView
            android:id="@+id/ivWish"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:padding="@dimen/_2sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivProduct" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>