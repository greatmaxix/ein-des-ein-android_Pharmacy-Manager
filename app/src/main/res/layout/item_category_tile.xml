<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvCategoryTile"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:backgroundTint="@color/colorGlobalWhite"
        app:cardCornerRadius="@dimen/_6sdp"
        app:cardElevation="@dimen/_2sdp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="6:5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@color/colorRippleBlue"
        tools:layout_height="@dimen/_131sdp"
        tools:layout_width="@dimen/_158sdp">

        <ImageView
            android:id="@+id/ivCategoryIconTile"
            android:layout_width="@dimen/_48sdp"
            android:layout_height="@dimen/_48sdp"
            android:layout_gravity="end"
            android:layout_margin="@dimen/_8sdp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/analyzeTitleContentDescriptionHome"
            android:src="@drawable/ic_vaccine" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvCategoryNameTile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:gravity="bottom"
            android:textColor="@color/darkBlue"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold"
            tools:text="Гормоны для системного применения (исключая половые гормоны и инсулины)" />

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>