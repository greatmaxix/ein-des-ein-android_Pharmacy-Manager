<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorGlobalWhite"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/_10sdp"
    app:rippleColor="@color/colorRippleBlue">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivAvatarChatUser"
            android:layout_width="@dimen/_48sdp"
            android:layout_height="@dimen/_48sdp"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_logo" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvCounterChatUser"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:background="@drawable/background_message_counter"
            android:fontFamily="@font/open_sans_semibold"
            android:gravity="center"
            android:padding="@dimen/_1sdp"
            android:textColor="@color/colorGlobalWhite"
            android:textSize="@dimen/_8ssp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@+id/ivAvatarChatUser"
            tools:text="2" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvNameChatUser"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:ellipsize="end"
            android:fontFamily="@font/open_sans_semibold"
            android:maxLines="1"
            android:paddingTop="@dimen/_4sdp"
            android:textColor="@color/darkBlue"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintEnd_toStartOf="@+id/tvTimeChatUser"
            app:layout_constraintStart_toEndOf="@+id/ivAvatarChatUser"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Theresa Webb" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvMessageChatUser"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:ellipsize="end"
            android:fontFamily="@font/open_sans"
            android:maxLines="1"
            android:paddingBottom="@dimen/_4sdp"
            android:textColor="@color/darkBlue"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvTimeChatUser"
            app:layout_constraintStart_toEndOf="@+id/ivAvatarChatUser"
            tools:text="Good morning, tell me please ..." />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTimeChatUser"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:ellipsize="end"
            android:fontFamily="@font/open_sans"
            android:maxLines="1"
            android:textColor="@color/grey"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2:30" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>