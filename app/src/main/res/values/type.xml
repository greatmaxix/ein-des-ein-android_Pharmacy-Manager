<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- H1 -->
    <style name="TextAppearance.MaterialComponents.Headline4.H1">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_30sdp</item>
    </style>

    <!-- H2 -->
    <style name="TextAppearance.MaterialComponents.Headline5.H2">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_22sdp</item>
    </style>

    <!-- Button -->
    <style name="TextAppearance.MaterialComponents.Button.Button">
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Subhead-18 -->
    <style name="TextAppearance.MaterialComponents.Subtitle1.Subhead18">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Subhead-14 -->
    <style name="TextAppearance.MaterialComponents.Subtitle2.Subhead14">
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <!-- Body -->
    <style name="TextAppearance.MaterialComponents.Body1.Body">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <!-- Small Body -->
    <style name="TextAppearance.MaterialComponents.Body2.SmallBody">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <!-- Caption -->
    <style name="TextAppearance.MaterialComponents.Caption.Caption">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- Caption 2 -->
    <style name="TextAppearance.MaterialComponents.Caption.Caption2">
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- Extra small -->
    <style name="TextAppearance.MaterialComponents.Overline.ExtraSmall">
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>
</resources>