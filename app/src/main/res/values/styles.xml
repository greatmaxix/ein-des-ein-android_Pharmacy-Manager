<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorControlHighlight</item>

        <item name="android:windowBackground">@drawable/background_startup</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <!-- Theme for android layout preview with main background color -->
    <style name="PreviewTheme" parent="AppTheme" tools:ignore="UnusedResources">
        <item name="android:windowBackground">@drawable/background_main</item>
    </style>

    <style name="ProgressContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:elevation">100dp</item>
        <item name="android:background">@color/colorProgressBackground</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottom_sheet_corners</item>
    </style>

    <style name="AppToolbarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="Logo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_logo_stub</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_48sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_20sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_20sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_20sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_20sdp</item>
        <item name="boxStrokeColor">@color/primaryBlue</item>
    </style>

    <style name="TextInputAuthStyle" parent="TextInputStyle">
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
    </style>

    <style name="AuthSearchView" parent="AppTheme">
        <item name="colorAccent">@color/colorSearch</item>
        <item name="android:textColorPrimary">@color/colorSearch</item>
    </style>

</resources>